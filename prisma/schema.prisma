generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  passwordHash  String
  role          String
  createdAt     DateTime @default(now())

  foods         Food[]
  claims        Claim[]
  groups        Group[] @relation("UserCreatedGroups")
  groupMembers  GroupMember[]
}

model Food {
  id             Int        @id @default(autoincrement())
  name           String
  category       String
  quantity       Int
  expirationDate DateTime
  status         String
  ownerId        Int
  owner          User       @relation(fields: [ownerId], references: [id])
  createdAt      DateTime   @default(now())

  claims         Claim[]
}

model Claim {
  id             Int      @id @default(autoincrement())
  foodId         Int
  requestedById  Int
  status         String
  requestedAt    DateTime @default(now())

  food           Food     @relation(fields: [foodId], references: [id])
  requestedBy    User     @relation(fields: [requestedById], references: [id])
}

model Group {
  id         Int           @id @default(autoincrement())
  name       String
  type       String
  createdById Int
  creator    User          @relation("UserCreatedGroups", fields: [createdById], references: [id])
  members    GroupMember[]
}

model GroupMember {
  id      Int   @id @default(autoincrement())
  groupId Int
  userId  Int

  group   Group @relation(fields: [groupId], references: [id])
  user    User  @relation(fields: [userId], references: [id])
}
